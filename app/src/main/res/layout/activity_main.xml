<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    android:background="@drawable/bg_main"
    tools:context=".ui.activity.MainActivity">
    <ImageView
        android:paddingTop="20dp"
        android:contentDescription="@null"
        android:src="@drawable/splash_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="20dp"
        android:layout_weight="3"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_username"
        android:layout_marginTop="24dp"
        android:layout_weight="0.6"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        app:backgroundTint="@android:color/white"
        android:hint="@string/hint_username"
        android:textColorHint="@android:color/white"
        android:drawableStart="@drawable/user_icon"
        android:drawablePadding="30dp"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_password"
        android:layout_weight="0.6"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        app:backgroundTint="@android:color/white"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/white"
        android:drawableStart="@drawable/lock_icon"
        android:drawablePadding="30dp"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Space
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <FrameLayout
        android:onClick="onLogin"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:elevation="12dp"
        android:background="@drawable/rounded_rec_btn"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/text_login"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textSize="16sp"
            android:text="@string/action_login"
            android:textColor="@color/greyText"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <TextView
        android:id="@+id/text_login_msg"
        android:layout_marginTop="12dp"
        android:layout_weight="1.5"
        android:text="@string/text_login_with"
        android:textSize="@dimen/label_text_size"
        android:textColor="@color/whiteText"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <FrameLayout
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_fb_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <FrameLayout
            android:onClick="onFacebookSignIn"


            android:elevation="12dp"
            android:background="@drawable/rounded_rec_btn_blue"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_fb"
                android:paddingEnd="24dp"
                android:ems="7"
                android:gravity="center"

                android:layout_gravity="center_horizontal|center_vertical"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/facebook"

                android:textSize="16sp"
                android:text="@string/action_facebook"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:onClick="onGoogleSignIn"
        android:layout_marginTop="16dp"
        android:elevation="12dp"
        android:background="@drawable/rounded_rec_btn_red"
        android:layout_weight="1"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/text_google"
            android:paddingEnd="24dp"
            android:ems="7"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/google"
            android:textSize="16sp"
            android:text="@string/action_google"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
<!--
    <FrameLayout
        android:layout_marginTop="16dp"
        android:elevation="12dp"
        android:background="@drawable/rounded_rec_btn_green"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/text_spotify"
            android:paddingEnd="24dp"
            android:ems="7"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/spotify"
            android:textSize="16sp"
            android:text="@string/action_spotify"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    -->
    <Space
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/btn_sign_up"
        android:onClick="onSignUp"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:textColor="@color/whiteText"
        android:text="@string/action_sign_up"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>