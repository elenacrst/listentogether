<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:alpha="0.9"
    android:background="@drawable/bg_drawer"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_avatar"
            android:elevation="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@android:color/black"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
            app:civ_border_overlay="true"
            android:layout_marginTop="54dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/text_username"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:text="Ronald McDonald"
            android:textSize="16sp"
            android:textColor="@color/greyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_email"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="2dp"
            android:text="elena96crst@gmail.com"
            android:textSize="12sp"
            android:textColor="@color/lightBlueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@android:color/darker_gray"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:onClick="onProfile"
            android:id="@+id/text_profile"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="44dp"
            android:textSize="16sp"
            android:textColor="@color/greyText"
            android:drawableStart="@drawable/baseline_person_black_18"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="@string/option_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:onClick="onMyRooms"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:textSize="16sp"
            android:textColor="@color/greyText"
            android:drawableStart="@drawable/baseline_view_module_black_18"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="@string/option_my_rooms"
            android:id="@+id/text_my_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:onClick="onAllRooms"
            android:id="@+id/text_all_rooms"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:textSize="16sp"
            android:textColor="@color/greyText"
            android:drawableStart="@drawable/baseline_apps_black_18"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="@string/option_all_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:onClick="onSettings"
            android:id="@+id/text_settings"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:textSize="16sp"
            android:textColor="@color/greyText"
            android:drawableStart="@drawable/baseline_settings_black_18"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="@string/option_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:onClick="onLogout"
            android:id="@+id/text_logout"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:textSize="16sp"
            android:textColor="@color/brightRedText"
            android:drawableStart="@drawable/baseline_exit_to_app_black_18"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="@string/option_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.google.android.material.navigation.NavigationView>